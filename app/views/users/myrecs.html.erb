<div class="page-header">
  <h3><%= current_user.email %>'s Recommendations</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% current_user.recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.name %></td>
        <td><%= recommendation.address %></td>
        <td><%= recommendation.neighborhood %></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
