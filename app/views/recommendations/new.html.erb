<!-- Validation failure messages -->
<% if @recommendation.errors.any? %>
  <% @recommendation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Recommendation</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_recommendation" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @recommendation.name %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @recommendation.address %>">
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <input type="text" id="neighborhood" name="neighborhood" placeholder="Neighborhood" class="form-control" value="<%= @recommendation.neighborhood %>">
      </div>

        <!-- Label and input for user_id -->
        <div class="form-group">

          <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
        </div>

        <!-- Label and input for image_url -->
        <div class="form-group">
          <label for="image_url" class="control-label">
            Image URL
          </label>
          <input type="text" id="image_url" name="image_url" placeholder="Image URL" class="form-control" value="<%= @recommendation.image_url %>">
        </div>

        <!-- Label and input for yelp_url -->
        <div class="form-group">
          <label for="yelp_url" class="control-label">
            Yelp URL
          </label>
          <input type="text" id="yelp_url" name="yelp_url" placeholder="Yelp URL" class="form-control" value="<%= @recommendation.yelp_url %>">
        </div>

      <button class="btn btn-success">
        Create Recommendation
      </button>
      or
      <a href="/recommendations">Cancel</a>
    </form>
  </div>
</div>
